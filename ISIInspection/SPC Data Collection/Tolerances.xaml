<Window x:Class="SPC_Data_Collection.Tolerances"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tolerances" Height="330" Width="600" Loaded="Window_Loaded">
    <Grid>
        <TreeView HorizontalAlignment="Left" Height="234" Margin="2,16,0,0" VerticalAlignment="Top" Width="88">
            <TreeViewItem Header="Default"/>
            <TreeViewItem Header="Holes"/>
            <TreeViewItem Header="Taps"/>
        </TreeView>
        <TabControl HorizontalAlignment="Left" Height="250" Margin="100,0,0,0" Grid.RowSpan="7" Grid.ColumnSpan="7" VerticalAlignment="Top" Width="475" Grid.Column="1">
            <TabItem Header="Inch" Margin="0">
                <Grid Background="#FFE5E5E5" Margin="0,0,0,-0.2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="25*"/>
                        <RowDefinition Height="25*"/>
                        <RowDefinition Height="25*"/>
                        <RowDefinition Height="25*"/>
                        <RowDefinition Height="25*"/>
                        <RowDefinition Height="57*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="65"/>
                        <ColumnDefinition Width="112"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="X" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" Grid.Column="0" Grid.Row="1" Height="24" Width="18"/>
                    <Label Content="X.X" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" Grid.Column="0" Grid.Row="2" Height="24" Width="27" />
                    <Label Content="X.XX" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" Grid.Column="0" Grid.Row="3" Height="24" Width="34" />
                    <Label Content="X.XXX" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" Grid.Column="0" Grid.Row="4" Height="24" Width="42" />
                    <Label Content="X.XXXX" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" Grid.Column="0" Grid.Row="5" Height="24" Width="48" />
                    <Label Content="ANGULAR" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" Grid.Column="0" Grid.Row="6" Height="24" Width="65" Grid.ColumnSpan="2" />
                    <TextBox x:Name="ToleranceInchX" HorizontalAlignment="Left" Height="25" Margin="0" TextWrapping="Wrap" VerticalAlignment="Top" Width="112" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
                    <TextBox x:Name="ToleranceInchX_X" HorizontalAlignment="Left" Height="23" Margin="0" TextWrapping="Wrap" VerticalAlignment="Top" Width="112" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"/>
                    <TextBox x:Name="ToleranceInchX_XX" HorizontalAlignment="Left" Height="23" Margin="0" TextWrapping="Wrap" VerticalAlignment="Top" Width="112" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2"/>
                    <TextBox x:Name="ToleranceInchX_XXX" HorizontalAlignment="Left" Height="23" Margin="0" TextWrapping="Wrap" VerticalAlignment="Top" Width="112" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2"/>
                    <TextBox x:Name="ToleranceInchX_XXXX" HorizontalAlignment="Left" Height="23" Margin="0" TextWrapping="Wrap" VerticalAlignment="Top" Width="112" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2"/>
                    <TextBox x:Name="ToleranceInchAngular" HorizontalAlignment="Left" Height="23" Margin="0" TextWrapping="Wrap" VerticalAlignment="Top" Width="112" Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2"/>
                </Grid>
            </TabItem>
            <TabItem Header="Metric">
                <Grid Background="#FFE5E5E5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10*"/>
                        <RowDefinition Height="25*"/>
                        <RowDefinition Height="25*"/>
                        <RowDefinition Height="25*"/>
                        <RowDefinition Height="25*"/>
                        <RowDefinition Height="25*"/>
                        <RowDefinition Height="57*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="65"/>
                        <ColumnDefinition Width="112"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="X" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Grid.Column="0" Grid.Row="1" Height="24" Width="18" Grid.ColumnSpan="2"/>
                    <Label Content="X.X" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Grid.Column="0" Grid.Row="2" Height="24" Width="27" Grid.ColumnSpan="2" />
                    <Label Content="X.XX" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Grid.Column="0" Grid.Row="3" Height="24" Width="34" Grid.ColumnSpan="2" />
                    <Label Content="X.XXX" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Grid.Column="0" Grid.Row="4" Height="24" Width="42" Grid.ColumnSpan="2" />
                    <Label Content="X.XXXX" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Grid.Column="0" Grid.Row="5" Height="24" Width="48" Grid.ColumnSpan="2" />
                    <Label Content="ANGULAR" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Grid.Column="0" Grid.Row="6" Height="24" Width="65" Grid.ColumnSpan="2" />
                    <TextBox x:Name="ToleranceMetricX" Grid.Column="5" HorizontalAlignment="Left" Height="25" Margin="0.6,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="95" Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
                    <TextBox x:Name="ToleranceMetricX_X" HorizontalAlignment="Left" Height="23" Margin="0.6,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="95" Grid.Row="2" Grid.Column="5" Grid.ColumnSpan="2"/>
                    <TextBox x:Name="ToleranceMetricX_XX" HorizontalAlignment="Left" Height="23" Margin="0.6,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="95" Grid.Row="3" Grid.Column="5" Grid.ColumnSpan="2"/>
                    <TextBox x:Name="ToleranceMetricX_XXX" HorizontalAlignment="Left" Height="23" Margin="0.6,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="95" Grid.Row="4" Grid.Column="5" Grid.ColumnSpan="2"/>
                    <TextBox x:Name="ToleranceMetricX_XXXX" HorizontalAlignment="Left" Height="23" Margin="0.6,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="95" Grid.Row="5" Grid.Column="5" Grid.ColumnSpan="2"/>
                    <TextBox x:Name="ToleranceMetricAngular" HorizontalAlignment="Left" Height="23" Margin="0.6,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="95" Grid.Row="6" Grid.Column="5" Grid.ColumnSpan="2"/>
                </Grid>
            </TabItem>
        </TabControl>

        <Button x:Name="BtnCancel" Content="Cancel" Grid.Column="6" HorizontalAlignment="Right" Margin="0,0,80.2,10" Grid.Row="6" VerticalAlignment="Bottom" Width="75" Click="BtnCancel_Click"/>
        <Button x:Name="BtnSave" Content="Save" Grid.Column="5" HorizontalAlignment="Right" Margin="0,0,159.2,10" Grid.Row="6" VerticalAlignment="Bottom" Width="75" Grid.ColumnSpan="2" Click="BtnSave_Click"/>
    </Grid>
</Window>
