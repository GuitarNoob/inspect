<Window x:Class="SPC_Data_Collection.CollectDataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CollectDataWindow" Height="362" Width="1080.35" Loaded="Window_Loaded">
   <Window.Resources>
      <SolidColorBrush x:Key="clBr" Color="White" />
   </Window.Resources>
   <Grid>
      <DataGrid Margin="10" Name="DataGridMeasurements">
         <DataGrid.Columns>
            <DataGridTextColumn Header="Char" Width="75" Binding="{Binding SetPoint.CharNumber}" IsReadOnly="True">
               <DataGridTextColumn.CellStyle>
                  <Style TargetType="DataGridCell">
                     <Setter Property="Background" 
                                Value="{StaticResource clBr}" />
                  </Style>
               </DataGridTextColumn.CellStyle>
            </DataGridTextColumn>
            <DataGridTextColumn Header="Ref" Width="75" Binding="{Binding SetPoint.RefLocation}" IsReadOnly="True">
               <DataGridTextColumn.CellStyle>
                  <Style TargetType="DataGridCell">
                     <Setter Property="Background" 
                                Value="{StaticResource clBr}" />
                  </Style>
               </DataGridTextColumn.CellStyle>
            </DataGridTextColumn>
            <DataGridTextColumn Header="Requirement" Width="75" Binding="{Binding SetPoint.Requirement}" IsReadOnly="True">
               <DataGridTextColumn.CellStyle>
                  <Style TargetType="DataGridCell">
                     <Setter Property="Background" 
                                Value="{StaticResource clBr}" />
                  </Style>
               </DataGridTextColumn.CellStyle>
            </DataGridTextColumn>
            <DataGridTextColumn Header="UofM" Width="75" Binding="{Binding SetPoint.Units}" IsReadOnly="True">
               <DataGridTextColumn.CellStyle>
                  <Style TargetType="DataGridCell">
                     <Setter Property="Background" 
                                Value="{StaticResource clBr}" />
                  </Style>
               </DataGridTextColumn.CellStyle>
            </DataGridTextColumn>
            <DataGridTextColumn Header="Upper Limit" Width="75" Binding="{Binding SetPoint.UpperLimit}" IsReadOnly="True">
               <DataGridTextColumn.CellStyle>
                  <Style TargetType="DataGridCell">
                     <Setter Property="Background" 
                                Value="{StaticResource clBr}" />
                  </Style>
               </DataGridTextColumn.CellStyle>
            </DataGridTextColumn>
            <DataGridTextColumn Header="Lower Limit" Width="75" Binding="{Binding SetPoint.LowerLimit}" IsReadOnly="True">
               <DataGridTextColumn.CellStyle>
                  <Style TargetType="DataGridCell">
                     <Setter Property="Background" 
                                Value="{StaticResource clBr}" />
                  </Style>
               </DataGridTextColumn.CellStyle>
            </DataGridTextColumn>
            <DataGridTextColumn Header="Characteristic Designator" Width="150" Binding="{Binding SetPoint.CharacteristicDesignator}" IsReadOnly="True">
               <DataGridTextColumn.CellStyle>
                  <Style TargetType="DataGridCell">
                     <Setter Property="Background" 
                                Value="{StaticResource clBr}" />
                  </Style>
               </DataGridTextColumn.CellStyle>
            </DataGridTextColumn>
            <DataGridTextColumn Header="Inspection Device" Width="150" Binding="{Binding SetPoint.InspectionDevice}" IsReadOnly="True">
               <DataGridTextColumn.CellStyle>
                  <Style TargetType="DataGridCell">
                     <Setter Property="Background" 
                                Value="{StaticResource clBr}" />
                  </Style>
               </DataGridTextColumn.CellStyle>
            </DataGridTextColumn>
            <DataGridTextColumn Header="Comment" Width="Auto" Binding="{Binding SetPoint.Revision}" IsReadOnly="True">
               <DataGridTextColumn.CellStyle>
                  <Style TargetType="DataGridCell">
                     <Setter Property="Background" 
                                Value="{StaticResource clBr}" />
                  </Style>
               </DataGridTextColumn.CellStyle>
            </DataGridTextColumn>
            <DataGridTextColumn Header="Measured Value" MinWidth="200" Binding="{Binding Measured, Mode=TwoWay}" IsReadOnly="True"/>
         </DataGrid.Columns>         
      </DataGrid>
   </Grid>
</Window>
