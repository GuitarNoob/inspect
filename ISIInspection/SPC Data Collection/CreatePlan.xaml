<Window x:Class="SPC_Data_Collection.CreatePlan"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CreatePlan" Height="800" Width="1600" ShowInTaskbar="False" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Grid>
        <GroupBox Header="W.O. Information" Margin="401,10,9.6,0" VerticalAlignment="Top" Height="222" Background="#FFF0F0F0" BorderThickness="2"/>

        <GroupBox Header="Dimensional Criteria" Margin="17,237,9.6,0" VerticalAlignment="Top" Height="469" Background="#FFF0F0F0" BorderThickness="2">
            <DataGrid HorizontalAlignment="Left" Margin="11,92,0,0" VerticalAlignment="Top" Height="341" Width="1461" SelectionChanged="DataGrid_SelectionChanged"/>
        </GroupBox>
        <GroupBox Header="Inspection Plan" Margin="17,10,1197.6,0" VerticalAlignment="Top" Height="222" Background="#FFF0F0F0" BorderThickness="2">
            <ComboBox HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="113" Margin="113,0,0,150">
                <ComboBoxItem Content="Auto" HorizontalAlignment="Left" Width="110.4"/>
                <ComboBoxItem Content="Manual" HorizontalAlignment="Left" Width="110.4"/>
                <ComboBoxItem Content="First Article" HorizontalAlignment="Left" Width="110.4"/>
            </ComboBox>
        </GroupBox>
        <ComboBox HorizontalAlignment="Left" Margin="562,311,0,0" VerticalAlignment="Top" Width="153" >
            <ComboBoxItem Content="Linear"/>
            <ComboBoxItem Content="Angularity"/>
            <ComboBoxItem Content="Cirularlarity"/>
            <ComboBoxItem Content="Cylindricity"/>
            <ComboBoxItem Content="Diametric"/>
            <ComboBoxItem Content="Flatness"/>
            <ComboBoxItem Content="Note"/>
            <ComboBoxItem Content="Parrallelism"/>
            <ComboBoxItem Content="Perpendicularity"/>
            <ComboBoxItem Content="Positional"/>
            <ComboBoxItem Content="Runout"/>
        </ComboBox>
        <Label Content="Plan ID" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="41,27,0,0" Width="60"/>
        <Label Content="Char" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="32,285,0,0" Width="38"/>
        <Label Content="Ref Location" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="99,285,0,0" Width="79"/>
        <Label Content="Requirement" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="184,285,0,0" Width="79"/>
        <Label Content="UofM" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="280,285,0,0" Width="79"/>
        <Label Content="Upper Limit" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="376,285,0,0" Width="79"/>
        <Label Content="Lower Limit" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="473,285,0,0" Width="79"/>
        <Label Content="Charactoristic Designator" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="568,285,0,0" Width="147"/>
        <Label Content="Type" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="147,29,0,0" Width="79"/>
        <Label Content="Size (Qty Fab)" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="39,77,0,0" Width="91"/>
        <Label Content="Frequency" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="135,77,0,0" Width="79"/>
        <Label Content="Comment" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="840,286,0,0" Width="79"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="40,53,0,0" Background="#FFFFFFBE" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="83" ToolTip="Identification Number (Read Only)"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="32,311,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="62"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="100,311,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="74"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="179,311,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="85" ToolTip="Dimensional Requirement"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="269,311,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="85"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="358,311,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="97"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="461,311,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="97"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="40,102,0,0" Background="#FFFFFFBE" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="91" ToolTip="Quantity of the lot size"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="136,102,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="91"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="841,311,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="418"/>
        <Border BorderBrush="Black" BorderThickness="1" Background="#FF00C8FF" Margin="2,0,0,0" Height="60" VerticalAlignment="Bottom"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="41,153,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="70"/>
        <Label Content="AQL%" HorizontalAlignment="Left" Margin="52,128,0,0" VerticalAlignment="Top"/>
        <Label Content="Level" HorizontalAlignment="Left" Margin="116,129,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="116,153,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="80"/>
        <Label Content="Skip Lot" HorizontalAlignment="Left" Margin="41,174,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="41,198,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="80                  " ToolTip="Skip Inspection after successful lots"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="19,726,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Add" HorizontalAlignment="Left" Margin="32,264,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBox x:Name="TxtBoxWorkOrder" HorizontalAlignment="Left" Height="23" Margin="484,59,0,0" TextWrapping="Wrap" Text="{Binding selectedWO.WorkOrderNumber}" VerticalAlignment="Top" Width="120" Background="#FFFFFFBE" />
        <Label Content="Work Order" HorizontalAlignment="Left" Margin="484,33,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TxtBoxStatus" HorizontalAlignment="Left" Height="23" Margin="624,59,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Background="#FFFFFFBE"/>
        <Label Content="Customer" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="484,102,0,0" RenderTransformOrigin="1.735,-0.5"/>
        <Label Content="Status" HorizontalAlignment="Left" Margin="624,33,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TxtBoxRouter" HorizontalAlignment="Left" Height="23" Margin="770,59,0,0" TextWrapping="Wrap" Text="{Binding selectedWO.RouterFK}" VerticalAlignment="Top" Width="120" Background="#FFFFFFBE"/>
        <Label Content="Router" HorizontalAlignment="Left" Margin="768,33,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TxtBoxCustomer" HorizontalAlignment="Left" Height="23" Margin="484,128,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="348" Background="#FFFFFFBE"/>
        <TextBox x:Name="TxtBoxPartNumber" HorizontalAlignment="Left" Height="23" Margin="484,156,0,0" TextWrapping="Wrap" Text="{Binding selectedWO.PartNumber}" VerticalAlignment="Top" Width="348" Background="#FFFFFFBE"/>
        <Label Content="Part Number" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="401,153,0,0"/>
        <TextBox x:Name="TxtBoxPartRevision" HorizontalAlignment="Left" Height="23" Margin="837,156,0,0" TextWrapping="Wrap"  Text="{Binding selectedWO.Revision}" VerticalAlignment="Top" Width="53" Background="#FFFFFFBE"/>
        <Label Content="Revision" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="895,153,0,0"/>
        <TextBox x:Name="TxtBoxCustomerId" HorizontalAlignment="Left" Height="23" Margin="837,128,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="53" Background="#FFFFFFBE"/>
        <Label Content="ID                " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="837,102,0,0"/>
        <TextBox x:Name="TxtBoxDescription" HorizontalAlignment="Left" Height="23" Margin="484,188,0,0" TextWrapping="Wrap" Text="{Binding selectedWO.ItemDescription}" VerticalAlignment="Top" Width="348" Background="#FFFFFFBE"/>
        <Label Content="Description" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="406,188,0,0"/>
        <Label Content="Qty Fab" HorizontalAlignment="Left" Margin="1053,101,0,0" VerticalAlignment="Top"/>
        <Label Content="Qty Req" HorizontalAlignment="Left" Margin="972,102,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TxtBoxQuantityFab" HorizontalAlignment="Left" Height="23" Margin="1053,128,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="53" Background="#FFFFFFBE"/>
        <TextBox x:Name="TxtBoxQuantityReq" HorizontalAlignment="Left" Height="23" Margin="972,128,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="53" Background="#FFFFFFBE"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="734,311,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="100                  "/>
        <Label Content="Inspection Device&#xD;&#xA;" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="734,286,0,0" Width="156" Height="26"/>

    </Grid>
</Window>
